pipeline {
    agent {
        docker {
            image 'ci-cd-chaos-python:latest'
            args '-u root -v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    environment {
        TESTCONTAINERS_RYUK_DISABLED = 'true'
    }

    parameters {
        choice(
            name: 'TEST_MODE',
            choices: ['fail', 'pass'],
            description: 'Run failing tests or fixed tests?'
        )
    }

    environment {
        TEST_SCENARIO_DIR = "Jenkins/jenkins_scenarios/scenario_02_testcontainers"
    }

    stages {

        stage('Checkout Repo') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: 'phase-3-jenkins']],
                    userRemoteConfigs: [[
                        url: 'https://github.com/vellankikoti/ci-cd-chaos-workshop.git'
                    ]]
                ])
            }
        }

        stage('Pre-Cleanup') {
            steps {
                sh '''
                    echo "ðŸ”ª Pre-cleanup: Killing any leftover testcontainers..."

                    docker ps -q --filter name=testcontainers | xargs -r docker rm -f || true
                '''
            }
        }

        stage('Install Python Requirements') {
            steps {
                sh '''
                    echo "ðŸ”§ Installing Python requirements..."
                    pip install --no-cache-dir -r requirements.txt
                '''
            }
        }

        stage('Run Selected Tests') {
            steps {
                script {
                    def testFiles = []

                    if (params.TEST_MODE == 'fail') {
                        testFiles = [
                            'Jenkins/jenkins_scenarios/scenario_02_testcontainers/tests/test_postgres_fail.py',
                            'Jenkins/jenkins_scenarios/scenario_02_testcontainers/tests/test_redis_fail.py'
                        ]
                        echo "Chaos Agent is laughingâ€¦ weâ€™re running failing tests!"
                    } else {
                        testFiles = [
                            'Jenkins/jenkins_scenarios/scenario_02_testcontainers/tests/test_postgres_pass.py',
                            'Jenkins/jenkins_scenarios/scenario_02_testcontainers/tests/test_redis_pass.py'
                        ]
                        echo "Deploying TestContainers â€” Chaos Agentâ€™s defeat is imminent!"
                    }

                    testFiles.each { testFile ->
                        sh """
                            echo "=== Running test: ${testFile} ==="
                            pytest ${testFile}
                        """
                    }
                }
            }
        }
    }

    post {
        always {
            echo "âœ¨ Chaos Agent defeatedâ€¦ or plotting his next move!"
        }
    }
}
