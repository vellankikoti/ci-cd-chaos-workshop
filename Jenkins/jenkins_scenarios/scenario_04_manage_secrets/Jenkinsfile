pipeline {
    agent any

    environment {
        AWS_DEFAULT_REGION = "us-east-1"
    }

    stages {
        stage('Check AWS Identity') {
            steps {
                withCredentials([[
                    $class: 'AmazonWebServicesCredentialsBinding',
                    credentialsId: 'aws-credentials'
                ]]) {
                    echo "üîê Running AWS CLI to verify identity..."

                    sh '''
                        aws sts get-caller-identity
                    '''
                }
            }
        }
    }
}
