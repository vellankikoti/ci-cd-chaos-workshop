pipeline {
    agent any
    
    environment {
        WORKSPACE_PATH = '/Users/koti/demo-time/ci-cd-chaos-workshop'
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out code for HTML Test Reports'
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                echo 'Building Docker image for HTML Test Reports'
                script {
                    def image = docker.build("jenkins-workshop-${env.BUILD_NUMBER}")
                }
            }
        }
        
        stage('Test') {
            steps {
                echo 'Running tests for HTML Test Reports'
                sh 'python -m pytest tests/ -v'
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Deploying HTML Test Reports'
                // Add deployment steps here
            }
        }
    }
    
    post {
        always {
            echo 'Pipeline completed for HTML Test Reports'
        }
        success {
            echo 'Pipeline succeeded for HTML Test Reports'
        }
        failure {
            echo 'Pipeline failed for HTML Test Reports'
        }
    }
}